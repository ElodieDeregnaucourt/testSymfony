{% block title %}  Liste des contacts {% endblock %}



{% block body %}

	<style>
    h1{ color: #ff80c0}
	.btn {font-size:30px;background-color: #80ffff; border : 2px solid; border-radius:10px; text-decoration: none}
	</style>

	{% include "header/index.html.twig" %}

	<h1> Liste des Contacts </h1>

	<div>
		<a class="btn" href="{{ path('contact_ajouter') }}">Ajouter un contact</a> <br>
	</div>

	{% for notification in app.flashes('success') %}
 	<div>{{ notification }}</div>
 	{% endfor %}

	{% for gens in contact %} <br>
	Bonjour {{gens.nom}} {{gens.prenom}} <br>
	{% endfor %}


	{% if contact %}...

	{% else %}

		<h4>Il n'y a aucun contact pour le moment</h4>

	{% endif %}


{% endblock %}
